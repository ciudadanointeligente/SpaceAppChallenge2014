= form_for @log do |f|
  - if @log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - @log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :raw
    = f.text_area :raw
  .field
    = f.label :timestamp
    = f.datetime_select :timestamp
  .field
    = f.label :cdata
    = f.text_area :cdata
  .field
    = f.label :source_object
    = f.text_area :source_object
  .field
    = f.label :routine
    = f.text_area :routine
  .field
    = f.label :tag
    = f.text_area :tag
  .actions
    = f.submit 'Save'
